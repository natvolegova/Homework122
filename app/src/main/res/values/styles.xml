<resources>

    <!-- Base application theme. -->
    <style name="HomeWorkTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:padding">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorTertiary">@color/colorDark</item>
    </style>
</resources>
